<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_universal"
    tools:context=".Fragment_Chat_Screen">

    <LinearLayout
        android:id="@+id/linear_layout_chat_tab_holder"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal"
        android:elevation="50dp"
        android:background="@drawable/private_or_discussion_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_private_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Private"
            android:textColor="@color/bluish_white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_discussion_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Discussion"
            android:textColor="@color/bluish_white"
            android:textSize="20dp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/chat_layout_holder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linear_layout_chat_tab_holder"
        app:layout_constraintStart_toStartOf="@+id/linear_layout_chat_tab_holder"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_chat_tab_holder" />

</androidx.constraintlayout.widget.ConstraintLayout>